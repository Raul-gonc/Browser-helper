{
  "name": "dicionario-pessoal-desktop",
  "version": "1.0.0",
  "description": "Dicionário Pessoal - Versão Desktop com captura global de texto",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "npm run build"
  },
  "keywords": [
    "dicionario",
    "dictionary",
    "desktop",
    "electron",
    "hotkeys",
    "overlay",
    "productivity"
  ],
  "author": "Raul",
  "license": "MIT",
  "devDependencies": {
    "electron": "^25.8.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "electron-store": "^8.1.0",
    "node-fetch": "^2.7.0"
  },
  "build": {
    "appId": "com.dicionariopessoal.desktop",
    "productName": "Dicionário Pessoal",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "renderer/**/*",
      "services/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "mac": {
      "target": {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": {
        "target": "AppImage",
        "arch": [
          "x64"
        ]
      },
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
