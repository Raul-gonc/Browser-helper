# Configuração da Aplicação Desktop - Dicionário Pessoal
# Copie este arquivo para .env e configure suas chaves

# APIs de IA (opcional - para geração automática de definições)
OPENAI_API_KEY=sua_chave_openai_aqui
ANTHROPIC_API_KEY=sua_chave_anthropic_aqui
GOOGLE_AI_KEY=sua_chave_google_aqui

# Configurações da aplicação
APP_NAME=DicionarioPessoal
APP_VERSION=1.0.0
DEFAULT_LANGUAGE=pt-BR
DEBUG_MODE=false

# Hotkeys (formato Electron - modificáveis via config)
HOTKEY_CAPTURE=CommandOrControl+Shift+D
HOTKEY_TOGGLE=CommandOrControl+Alt+D
HOTKEY_CLOSE=Escape

# Configurações de interface
POPUP_WIDTH=350
POPUP_HEIGHT=200
POPUP_TIMEOUT=10000
MAIN_WINDOW_WIDTH=800
MAIN_WINDOW_HEIGHT=600

# Configurações de armazenamento
DATA_FOLDER=dicionario-pessoal
DICTIONARY_FILE=dictionary.json
CONFIG_FILE=config.json
BACKUP_ENABLED=true
MAX_BACKUPS=10

# Configurações de sincronização (futuro)
SYNC_ENABLED=false
SYNC_INTERVAL=300000
CLOUD_PROVIDER=none